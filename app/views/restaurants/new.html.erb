<div class="container mt-4">
    <h1 class="mb-3">New Restaurant</h1>
    <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
    <%= f.button :submit, class:"btn btn-danger" %>
    <% end %>
</div>